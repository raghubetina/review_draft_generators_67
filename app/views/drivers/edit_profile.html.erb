<div >
  <h5>
    Edit Driver Account
  </h5>

  <div>
    <form action="/patch_driver" method="post">
                    <div>
        <label for="email">Email</label>
                <input id="email" name="email" value="<%= @current_driver.email %>">
                </div>
        
              
                    <div>
        <label for="username">Username</label>
                <input id="username" name="username" value="<%= @current_driver.username %>">
                </div>
        
                    <div>
        <label for="first_name">First name</label>
                <input id="first_name" name="first_name" value="<%= @current_driver.first_name %>">
                </div>
        
                    <div>
        <label for="last_name">Last name</label>
                <input id="last_name" name="last_name" value="<%= @current_driver.last_name %>">
                </div>
        
                    <div>
        <label for="bio">Bio</label>
                <textarea id="bio" name="bio" rows="3"><%= @current_driver.bio %></textarea> 
                </div>
        
                    <div>
        <label for="hired_on">Hired on</label>
                <input id="hired_on" name="hired_on" value="<%= @current_driver.hired_on %>">
                </div>
        
            <div>
        <label for="password">Password</label>
        <input id="password" name="password" placeholder="Choose a password..." type="password">
      </div>
    
      <div>
        <label for="password_confirmation">Password Confirmation</label>
        <input id="password_confirmation" name="password_confirmation" placeholder="Confirm your password..." type="password">
      </div>

      <button>
        Update account
      </button>
    </form>
  </div>
</div>
